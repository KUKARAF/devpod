#!/home/rafa/.config/dotfiles/.venv/bin/python
import sys
from dotenv import dotenv_values

def read_env_keys(env_file=".env"):
    """Read and print the keys from a .env file."""
    try:
        config = dotenv_values(env_file)
        for key in config.keys():
            print(key)
    except FileNotFoundError:
        print(f"Error: The file '{env_file}' does not exist.")
    except Exception as e:
        print(f"An error occurred: {e}")

if __name__ == "__main__":
    # Use the first argument as the .env file path, or default to ".env"
    env_file = sys.argv[1] if len(sys.argv) > 1 else ".env"
    read_env_keys(env_file)

